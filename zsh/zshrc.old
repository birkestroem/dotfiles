alias conda-activate='conda activate "$(conda info --envs | tail -n +3 | head -n -1 | fzf | awk "{print \$1}")"'

# >>> conda initialize >>>
# !! Contents within this block are managed by 'conda init' !!
__conda_setup="$('/home/jesper/miniconda3/bin/conda' 'shell.zsh' 'hook' 2> /dev/null)"
if [ $? -eq 0 ]; then
    eval "$__conda_setup"
else
    if [ -f "/home/jesper/miniconda3/etc/profile.d/conda.sh" ]; then
        . "/home/jesper/miniconda3/etc/profile.d/conda.sh"
    else
        export PATH="/home/jesper/miniconda3/bin:$PATH"
    fi
fi
unset __conda_setup
# <<< conda initialize <<<


alias tree='tree -I "node_modules|.git"'

if [ -f ~/.zshrc.local ]; then
    source ~/.zshrc.local
fi